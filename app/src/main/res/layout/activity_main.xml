<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.yizhen.audiodemo.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/check_group_list_item_name"
        android:layout_width="80dp"
        android:layout_height="22dp"
        android:singleLine="true"
        android:focusableInTouchMode="true"
        android:text="组员1组员1组员1组员1组员3组员4组员5组员6"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit="marquee_forever"
        android:focusable="true"
         />


    <Button
        android:id="@+id/btn_file_mode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="文件模式录音"
        tools:layout_editor_absoluteX="89dp"
        tools:layout_editor_absoluteY="61dp" />

    <Button
        android:id="@+id/btn_stream_mode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="字节流模式录音"
        tools:layout_editor_absoluteX="89dp"
        tools:layout_editor_absoluteY="142dp" />

</LinearLayout>
